{
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/TM.PartnerStores.Platform.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "docker-build",
            "label": "docker-build: debug",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "tmpartnerstores:dev",
                "target": "base",
                "dockerfile": "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/TM.PartnerStores.Platform.csproj"
            }
        },
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "tmpartnerstores:latest",
                "dockerfile": "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/Dockerfile",
                "context": "${workspaceFolder}",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/TM.PartnerStores.Platform.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/TM.PartnerStores.Platform.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/src/Platform/TM.PartnerStores.Platform/TM.PartnerStores.Platform.csproj"
            }
        }
    ]
}